import sqlite3
import os

# ... (otras importaciones y c贸digo)

# Ruta completa al archivo de la base de datos
db_path = os.path.join(os.path.dirname(__file__), 'usuarios.db')

# Crear conexi贸n y cursor
conn = sqlite3.connect(db_path)
c = conn.cursor()

# Ejecutar consulta de creaci贸n de tabla u otras operaciones si es necesario
c.execute('''
    CREATE TABLE IF NOT EXISTS usuarios (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        nombres TEXT,
        apellidos TEXT,
        correo TEXT,
        facultad TEXT,
        imagen TEXT
    )
''')

# Guardar cambios y cerrar la conexi贸n
conn.commit()
conn.close()
